<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constr_list_detail"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#E9EFC0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_marginStart="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_search_detail"
            app:layout_constraintStart_toEndOf="@+id/edt_search_detail"
            app:layout_constraintTop_toTopOf="@+id/edt_search_detail"
            app:layout_constraintVertical_bias="0.533"
            app:srcCompat="@drawable/bell_solid" />

        <EditText
            android:id="@+id/edt_search_detail"
            android:layout_width="218dp"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border_edt"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="         Search"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="29dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_search_detail"
            app:layout_constraintStart_toStartOf="@+id/edt_search_detail"
            app:layout_constraintTop_toTopOf="@+id/edt_search_detail"
            app:layout_constraintVertical_bias="0.562"
            app:srcCompat="@drawable/magnifying_glass_solid" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView16"
            app:layout_constraintStart_toEndOf="@+id/imageView16"
            app:layout_constraintTop_toTopOf="@+id/imageView16"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/_6968764" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constr_detail"
            android:layout_width="410dp"
            android:layout_height="636dp"
            android:background="#B4E197"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_search_detail"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="110dp"
                android:layout_height="29dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:shadowColor="#353535"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="15"
                android:text="List Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ListView
                android:id="@+id/lst_detail"
                android:layout_width="409dp"
                android:layout_height="363dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <ImageButton
                android:id="@+id/btn_newtask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/important_1"
                app:layout_constraintEnd_toEndOf="@+id/lst_detail"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="@+id/lst_detail"
                app:layout_constraintTop_toBottomOf="@+id/lst_detail"
                app:srcCompat="@drawable/important_1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>